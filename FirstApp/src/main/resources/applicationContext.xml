<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context.xsd">



    <context:component-scan base-package="com.mouritech.firstapp"/>
    
    <!--  bean(s) definition  -->
    
    <bean id="quotationService" class="com.mouritech.firstapp.Quotation">
            <property name="quote" value="A Positive mindset brings positive things"></property>
    </bean>
    
    
    <bean id="greetingsService" class="com.mouritech.firstapp.Greetings">
            <property name="greet" value="nature is beautiful!"></property>
    </bean>
    
    
      
        <bean id="emp" class="com.mouritech.firstapp.Employee">
    		<property name="empId" value="111"></property>
    		<property name="empName" value="Rahul"></property>
    </bean>
    
    
       <bean id="CustomerService" class="com.mouritech.firstapp.Customer">
            <property name="customerId" value="1"></property>
            <property name="customerName" value="raja"></property>
            <property name="customerAddress" value="delhi"></property>
    </bean>
    
   





 </beans>